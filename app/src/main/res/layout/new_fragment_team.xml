<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_rectangle_tube"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:id="@+id/view4" />


    <View
        android:background="@color/colorWhite"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/new_fragment_team_rv_year"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/view5"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />



    <android.support.v7.widget.RecyclerView
        android:id="@+id/new_fragment_team_rv_year"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"

        android:paddingStart="200dp"
        android:paddingEnd="200dp"

        android:orientation="horizontal"
        android:clipChildren="false"
        android:clipToPadding="false"

        app:layout_constraintBottom_toBottomOf="@+id/view4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view4"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

    </android.support.v7.widget.RecyclerView>


    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorWhite"
        android:alpha="0.1"
        app:layout_constraintTop_toBottomOf="@+id/view5"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginBottom="16dp"
        android:id="@+id/view3"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.0" />


    <ImageButton
        android:background="@drawable/rounded_border_action_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/new_fragment_team_btn_design"
        android:id="@+id/new_fragment_team_btn_editorial"
        app:srcCompat="@drawable/ic_notepad_2"
        tools:layout_constraintRight_creator="1"
        android:scaleType="centerInside"
        android:padding="5dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="0dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_chainStyle="spread"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="@+id/view3"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:background="@drawable/rounded_border_action_bar"
        app:layout_constraintBottom_toTopOf="@+id/new_fragment_team_btn_photography"
        app:layout_constraintTop_toBottomOf="@+id/new_fragment_team_btn_editorial"
        android:id="@+id/new_fragment_team_btn_design"

        android:padding="5dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_layers_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        tools:layout_constraintLeft_creator="1"

        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/new_fragment_team_btn_editorial"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/new_fragment_team_btn_editorial" />


    <ImageButton
        android:background="@drawable/rounded_border_action_bar"
        app:layout_constraintBottom_toTopOf="@+id/new_fragment_team_btn_management"
        app:layout_constraintTop_toBottomOf="@+id/new_fragment_team_btn_design"
        android:id="@+id/new_fragment_team_btn_photography"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_photo_camera"
        android:padding="5dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        tools:layout_constraintLeft_creator="1"

        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/new_fragment_team_btn_design"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/new_fragment_team_btn_design" />

    <ImageButton
        android:background="@drawable/rounded_border_action_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/new_fragment_team_btn_management"
        android:scaleType="centerInside"
        app:layout_constraintTop_toBottomOf="@+id/new_fragment_team_btn_photography"
        app:srcCompat="@drawable/ic_customer_service"
        tools:layout_constraintRight_creator="1"
        android:padding="5dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/new_fragment_team_btn_photography"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/new_fragment_team_btn_photography" />


    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/new_fragment_team_rv_names"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/view3">

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>