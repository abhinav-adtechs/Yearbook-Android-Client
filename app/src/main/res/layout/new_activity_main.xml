<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_margin="7dp"
        android:id="@+id/new_activity_main_toolbar_main"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="7dp"
        android:background="@drawable/rounded_border_action_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/new_activity_main_fragment_title"
            android:text="Dashboard"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="start"
            android:layout_marginStart="40sp"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
            app:srcCompat="@mipmap/yearbook_logo"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:text="Yearbook VIT"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginEnd="30sp"
            android:layout_gravity="end"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        </android.support.v7.widget.Toolbar>


    <View
        android:background="@drawable/rounded_rectangle_tube"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:alpha="0.6"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/new_activity_main_fragment_frame"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/view" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <ImageButton
            android:id="@+id/new_activity_main_tab_team"
            app:srcCompat="@drawable/ic_people_outline_white_24px"
            android:background="@android:color/transparent"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            android:layout_width="80dp"
            android:layout_height="80dp" />


        <ImageButton
            android:id="@+id/new_activity_main_tab_dashboard"
            app:srcCompat="@drawable/ic_dashboard_white_24px"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <ImageButton
            android:id="@+id/new_activity_main_tab_info"
            app:srcCompat="@drawable/ic_info_outline_white_24px"
            android:background="@android:color/transparent"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:layout_width="80dp"
            android:layout_height="80dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/new_activity_main_fragment_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="128dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/new_activity_main_toolbar_main">

    </FrameLayout>


</android.support.constraint.ConstraintLayout>