<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.OldUI.Dashboard.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_main_toolbar_main"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="7dp"
        android:background="@color/colorPrimaryDark">


        <ImageView
            android:transitionName="yb_logo"
            android:src="@mipmap/yearbook_logo"
            android:layout_width="30dp"
            android:layout_height="30dp" />


        <TextView
            android:paddingStart="20dp"
            android:textSize="20sp"
            android:text="Yearbook VIT"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </android.support.v7.widget.Toolbar>


    <FrameLayout
        android:id="@+id/activity_main_framelayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/activity_main_bottom_navigation"
        app:itemTextColor="@color/colorWhite"
        app:itemBackground="@color/ybBaseBlue"
        app:itemIconTint="@color/colorWhite"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation_main" />

</LinearLayout>
