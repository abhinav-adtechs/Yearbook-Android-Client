<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.vit.yearbook">

    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@mipmap/yearbook_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".View.Introduction.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.Preview.BookPreviewActivity" />
        <activity
            android:name=".View.Dashboard.MainActivity"
            android:label="@string/title_activity_main"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.vit.yearbook.View.BaseActivity" />
        </activity>
    </application>

</manifest>